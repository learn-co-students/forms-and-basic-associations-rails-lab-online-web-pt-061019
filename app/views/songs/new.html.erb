<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :name, :name %>
  
  <!-- <%= f.label :note_contents %> -->
  <%= f.fields_for :notes, 2.times{@song.notes.build} do |nf| %>
    <%= nf.label :content %>
    <%= nf.text_area :content %>
  <% end %>

  <%= f.submit %>
<% end %>


