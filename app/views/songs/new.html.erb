<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.fields_for :notes, [Note.new, Note.new] do |notes_field| %>
    <%= f.label :content %>
    <%= notes_field.text_field :content %>
  <% end %>


  <%= f.submit %>
<% end %>


